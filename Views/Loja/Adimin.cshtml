@model List<ShoppingMVC.ViewModels.LojaViewModel>
@{
    ViewData["Title"] = "Gestão de Lojas";
}

<h1>Lojas</h1>
<h4 style="color: red;"">@TempData["NameError"]</h4>

@if(Model.Count == 0)
{
    <p>Não há lojas cadastradas.</p>
    <a href="/Loja/Cadastrar"><button>Cadastrar Loja</button></a>
} 
else
{
    @foreach(var loja in Model)
    {
        <h3>@loja.Nome</h3>

        <p>Id: @loja.Id</p>
        <p>Piso: @loja.Piso</p>
        <p>Descrição: @loja.Descricao</p>
        <p>Tipo: @loja.Tipo</p>
        <p>E-mail: @loja.Email</p>
        <a href="/Loja/Show/@loja.Id"><button>Detalhes</button></a>
        <a href="/Loja/DeleteLoja/@loja.Id"><button>Deletar Loja</button></a>
        <hr>
    }
}